<% provide(:title, 'Reset password - Step 2')  %>

<h1>Update your password</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %>
        <%= f.password_field :password, class: "form-control input-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmation", class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control input-sm" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update password", class: "btn btn-primary btn-lg btn-md" %>
      </div>

    <% end %>

  </div>
</div>
