<% provide(:title, 'Log in')  %>

<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, class: "form-control input-sm" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label" %>
        <!-- link_to '(forgot your password?)', new_password_reset_path  -->
        <%= f.password_field :password, class: "form-control input-sm" %>
      </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <div class="form-group">
        <%= f.submit "Enter", class: "btn btn-primary btn-lg btn-block" %>
      </div>

    <% end %>
    <p>New user? <%= link_to 'Sign up now!', signup_path %></p>
  </div>
</div>
